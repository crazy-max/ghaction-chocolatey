{
  "name": "chocolatey-action",
  "description": "GitHub Action for Chocolatey, the package manager for Windows",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "cleanup-paths": "removeNPMAbsolutePaths ./ --force --fields _where _args",
    "pre-checkin": "npm run format && npm run cleanup-paths && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-chocolatey.git"
  },
  "keywords": [
    "actions",
    "chocolatey"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@zeit/ncc": "^0.22.3",
    "prettier": "^2.0.5",
    "removeNPMAbsolutePaths": "^2.0.0",
    "typescript": "^3.9.3"
  }
}
