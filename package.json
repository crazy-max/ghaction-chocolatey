{
  "name": "chocolatey-action",
  "description": "GitHub Action for Chocolatey, the package manager for Windows",
  "main": "lib/main.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc && ncc build",
    "test": "jest",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "npm run format && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-chocolatey.git"
  },
  "keywords": [
    "actions",
    "chocolatey"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/exec": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^13.13.1",
    "@zeit/ncc": "^0.22.1",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3"
  }
}
